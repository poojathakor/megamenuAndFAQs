<li class="site-nav--has-dropdown site-nav--has-centered-dropdown {% if link.active %} site-nav--active{% endif %}" data-has-dropdowns>
  <button class="site-nav__link site-nav__link--main site-nav__link--button{% if link.child_active %} site-nav__link--active{% endif %}" type="button" aria-expanded="false" aria-controls="SiteNavLabel-{{ child_list_handle }}">
    <span class="site-nav__label">{{ link.title | escape }}</span>{% include 'icon-chevron-down' %}
  </button>
  <div class="megamenu-dropdown site-nav__dropdown site-nav__dropdown--centered critical-hidden" id="SiteNavLabel-{{ child_list_handle }}">
    {% if linklists[block.settings.link1].links.size > 0 %}
      <ul>
        {% for link in linklists[block.settings.link1].links %}
          <li>
            <a href="{{ link.url }}"
            class="site-nav__link site-nav__child-link{% if forloop.last %} site-nav__link--last{% endif %}"
            {% if link.current %} aria-current="page"{% endif %}
          >
              <span class="site-nav__label">{{ link.title | escape }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
    {% if linklists[block.settings.link2].links.size > 0 %}
      <ul>
        {% for link in linklists[block.settings.link2].links %}
          <li>
            <a href="{{ link.url }}"
            class="site-nav__link site-nav__child-link{% if forloop.last %} site-nav__link--last{% endif %}"
            {% if link.current %} aria-current="page"{% endif %}
          >
              <span class="site-nav__label">{{ link.title | escape }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
    {% if linklists[block.settings.link3].links.size > 0 %}
      <ul>
        {% for link in linklists[block.settings.link3].links %}
          <li>
            <a href="{{ link.url }}"
            class="site-nav__link site-nav__child-link{% if forloop.last %} site-nav__link--last{% endif %}"
            {% if link.current %} aria-current="page"{% endif %}
          >
              <span class="site-nav__label">{{ link.title | escape }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
    {% if linklists[block.settings.link4].links.size > 0 %}
      <ul>
        {% for link in linklists[block.settings.link4].links %}
          <li>
            <a href="{{ link.url }}"
            class="site-nav__link site-nav__child-link{% if forloop.last %} site-nav__link--last{% endif %}"
            {% if link.current %} aria-current="page"{% endif %}
          >
              <span class="site-nav__label">{{ link.title | escape }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
    {% if block.settings.image != blank %}
      {% if block.settings.link != blank %}
      	<a href="{{block.settings.link}}">
      {% endif %}
          <div class="image__wrapper">
            {%- assign image = block.settings.image | img_url: '50x50' -%}
            {%- assign img_url =  block.settings.image | img_url: '50x50' | replace: '_50x50.', '_{width}x.' -%}
            <img
                 class="lazyload"
                 src="{{ block.settings.image | img_url: '100x' }}"
                 data-src="{{ img_url }}"
                 data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                 data-sizes="auto"
                 alt="{{ block.settings.image.alt | escape }}"
                 style="width:100%;"
                 /> 
          </div>
      {% if block.settings.link != blank %}
      	</a>
      {% endif %}
     {% endif %}
  </div>
</li>